<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="50sp"
    android:layout_marginEnd="10sp"
    android:layout_marginTop="10sp"
    android:layout_marginBottom="10sp"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="70sp"
    >

    <FrameLayout
        android:id="@+id/messageBackgroundFl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="70sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:background="@drawable/send_message_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"

            android:layout_marginStart="15sp"
            android:layout_marginEnd="15sp"
            android:layout_marginBottom="10sp"
            android:layout_marginTop="10sp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/messageTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:gravity="end"
                android:textColor="@color/black"
                android:text="This is a sample text to represent how the chat will look when multiple lines of texts are written in the text view"
                android:textSize="20sp"
                />

            <TextView
                android:id="@+id/timestampTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:gravity="end"
                android:textColor="#202020"
                android:text="12:00 am"
                />
        </LinearLayout>




    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>